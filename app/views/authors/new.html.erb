<h2>Add New Author</h2>

<%= form_for @author do |f| %>
	<!-- CHECK FOR ERRORS -->
		<% if @author.errors.any? %>
			<% @author.errors.full_messages.each do |msg| %>
				<!-- SHOW ERRORS -->
				<div class="alert alert-danger"><%= msg %></div>
			<% end %>
		<% end %>
	<div class="form-group">
		<%= f.label :f_name %><br />
		<%= f.text_field :f_name, class:'form-control' %><br />
	</div>

	<div class="form-group">
		<%= f.label :l_name %><br />
		<%= f.text_field :l_name, class:'form-control' %><br />
	</div>

	<%= f.submit "Submit", class:"btn btn-primary" %>
	<%= link_to "Cancel", authors_path, class:"btn btn-default" %>

<% end %>